# Vector AI API Configuration (Required)
VECTOR_API_KEY=your_vector_ai_api_key_here
VECTOR_API_URL=https://api.vector-ai.pro/v1

# Blockchain Data Providers (Required)
ALCHEMY_API_KEY=your_alchemy_api_key_here
MORALIS_API_KEY=your_moralis_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here

# Advanced Analytics (Optional)
DUNE_API_KEY=your_dune_analytics_key_here
DEFILLAMA_API_KEY=your_defillama_key_here
BITQUERY_API_KEY=your_bitquery_key_here

# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Analysis Settings
ANALYSIS_DEPTH=comprehensive
CACHE_DURATION=300000
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# AI Model Configuration
AI_MODEL=vgpt-premium
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# Database (Optional - for caching and history)
DATABASE_URL=postgresql://user:password@localhost:5432/vectorai_analyzer
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ID=your_analytics_id_here 